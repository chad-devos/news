<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
  
  <body>


  <div class="container weather">
  <div class="row">
    <div class="col-sm current">
        <h2>Current weather: </h2>
        <h4><%= @current_temperature %> Degrees and <%= @current_conditions.downcase %>.</h4>
    </div>
    <div class="col-sm tom">
        <h2>Tomorrow's forecast: </h2>
        <h4><%= @future_temps[0] %> Degrees and <%= @future_conditions[0] %></h4>
    </div>
    <div class="col-sm next">
        <h2>Next three days: </h2>
    <ol>
        <% for item in (1..3) %>
        <li><%= @future_temps[item] %> Degrees and <%= @future_conditions[item] %></li>
        <% end %>
    </ol>
    </div>
  </div>
</div>

<div class="newspage">
<div class="container mt-3">
    <h2>Today's top national headlines: </h2>
  <ol>
    <% for article in @news_headlines %>
        <% links = 0 %>
        <li><%= article %> <a href="<%= @news_links[links] %>">(Article Link)</a></li>
        <% links = links+1 %>
    <% end %>
  </ol>
</div>
  

</div>

 <hr>      
  </body>
</html>
